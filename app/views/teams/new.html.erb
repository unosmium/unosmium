<%= form_for @team, as: :team, url: tournament_teams_path do |f| %>
  <p>Name: <%= f.text_field :school %></p>
  <p>Suffix: <%= f.text_field :suffix %></p>
  <p>Number <%= f.number_field :number %></p>
  <p>City <%= f.text_field :city %></p>
  <p>State <%= f.select :state, Team.states.keys %></p>
  <p>Subdivision <%= f.select :subdivision, Team.subdivisions.keys %> </p>
  <p>Exhibition Team?: <%= f.check_box :exhibition %></p>
  <p><%= f.submit %></p>
<% end %>

